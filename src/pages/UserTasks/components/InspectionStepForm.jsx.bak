      toast.success(`Checkpoint status updated`);
      if (onUpdateProgress) onUpdateProgress(updatedTask);
      
      // Update local compliance status
      setComplianceStatus(prev => ({
        ...prev,
        [subLevelId]: status
      }));
      
      // Recalculate scores
      calculateScores();
      
      // Stop timer if running
      if (activeTimers[subLevelId]) {
