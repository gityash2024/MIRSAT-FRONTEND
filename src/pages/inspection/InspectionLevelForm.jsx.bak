      };
      
      updatedQuestion.scores = {
        'Full compliance': 2,
        'Partial compliance': 1,
        'Non-compliant': 0,
        'Not applicable': 0
      };
    } else if (newType === 'radio' || newType === 'dropdown' || newType === 'select') {
